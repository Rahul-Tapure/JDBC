//app class is entry point of application
package com.app;
import com.model.Student;
import com.dao.StudentDAO;
public class App {
	
	public static void main(String[] args) {
	
    StudentDAO dao = new StudentDAO();
    int rowEffected=0;

//add student
Student stud1 = new Student(11, "rahul", 90.0f);
rowEffected = dao.saveStudent(stud1);
rowEffected = dao.saveStudent("12, "rohit", 90.0f);

//update student
Student stud2 = new Student(12, "shubham", 90.0f);
rowEffected = dao.updateStudent(stud2);

//delete student 
rowEffected = dao.deleteStudent(12);

//show all student
List<Student> = dao.getAllStudents();
	}

}

